{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "lib": [
        "DOM", 
        "ES6"
    ],
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"]
  }